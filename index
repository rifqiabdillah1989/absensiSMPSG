    }
    button {
      background: #2b7a78;
      color: white;
      font-weight: bold;
      cursor: pointer;
      margin-top: 15px;
    }
    button:disabled {
      background: #aaa;
      cursor: not-allowed;
    }
    button:hover:enabled {
      background: #205b57;
    }
    #status {
      margin-top: 10px;
      font-size: 14px;
      font-weight: bold;
      text-align: center;
    }
    #log {
      margin-top: 20px;
